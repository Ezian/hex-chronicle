    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Hexamap",
            "type": "python",
            "request": "launch",
            "program": "hexamap.py",
            "console": "integratedTerminal",
            "args": ["--output", "hexgrid-example.svg", "./**/*"],
            "justMyCode": true
        },
        {
            "name": "Python: Hexamap (directory)",
            "type": "python",
            "request": "launch",
            "program": "hexamap.py",
            "console": "integratedTerminal",
            "args": [
                "--output",
                "output",
                "--css",
                "test_files/custom.css",
                "./**/*"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Hexamap (default output)",
            "type": "python",
            "request": "launch",
            "program": "hexamap.py",
            "console": "integratedTerminal",
            "args": ["./**/*"],
            "justMyCode": true
        }
    ]
}
